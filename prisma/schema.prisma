// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(uuid())
  name     String
  lastName String
  email    String     @unique
  password String
  Favorite Favorite[]
}

model Restaurant {
  id             String     @id @default(uuid())
  name           String
  description    String
  rating         Float
  timeToDelivery String
  deliveryPrice  Float
  menus          Menu[]
  Favorite       Favorite[]
}

model Menu {
  id           String     @id @default(uuid())
  name         String
  description  String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId String
  products     Product[]
}

model Product {
  id          String @id @default(uuid())
  name        String
  description String
  price       Float
  menu        Menu   @relation(fields: [menuId], references: [id])
  menuId      String
  imageUrl    String @default("https://img.freepik.com/psd-premium/um-prato-de-salada-com-a-foto-de-uma-salada_176841-42042.jpg")
}

model Favorite {
  id           String     @id @default(uuid())
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId String
}
